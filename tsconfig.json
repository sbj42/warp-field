{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "downlevelIteration": true,
    "rootDir": "src",
    "outDir": "lib",
    "declaration": true
  },
  "include": [ "src/**/*" ]
}
